<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:fragment="com.flxrs.dankchat.preferences.AppearanceSettingsFragment"
        app:icon="@drawable/ic_palette"
        app:key="@string/preference_appearance_key"
        app:title="@string/preference_appearance_header" />

    <Preference
        app:fragment="com.flxrs.dankchat.preferences.NotificationsSettingsFragment"
        app:icon="@drawable/ic_notifications_active"
        app:key="@string/preference_notifications_mentions_key"
        app:title="@string/preference_highlights_ignores_header" />

    <Preference
        app:fragment="com.flxrs.dankchat.preferences.ChatSettingsFragment"
        app:icon="@drawable/ic_forum"
        app:key="@string/preference_chat_key"
        app:title="@string/preference_chat_header" />

    <Preference
        app:fragment="com.flxrs.dankchat.preferences.StreamsSettingsFragment"
        app:icon="@drawable/ic_play_arrow"
        app:key="@string/preference_streams_header_key"
        app:title="@string/preference_streams_header" />

    <Preference
        app:fragment="com.flxrs.dankchat.preferences.ToolsSettingsFragment"
        app:icon="@drawable/ic_construction"
        app:key="@string/preference_tools_key"
        app:title="@string/preference_tools_header" />

    <Preference
        app:fragment="com.flxrs.dankchat.preferences.DeveloperSettingsFragment"
        app:icon="@drawable/ic_developer_mode"
        app:key="@string/preference_developer_key"
        app:title="@string/preference_developer_header" />

    <Preference
        app:icon="@drawable/ic_fiber_new"
        app:isPreferenceVisible="false"
        app:key="@string/preference_whats_new_key"
        app:title="@string/preference_whats_new_header" />

    <Preference
        android:icon="@drawable/ic_exit_to_app"
        android:key="@string/preference_logout_key"
        android:title="@string/logout" />

    <com.flxrs.dankchat.preferences.ui.SecretDankerModePreferenceCategory
        android:title="@string/preference_about_header"
        app:iconSpaceReserved="false">

        <com.flxrs.dankchat.preferences.ui.AboutPreference
            android:key="@string/preference_about_key"
            app:iconSpaceReserved="false"
            app:selectable="false" />
    </com.flxrs.dankchat.preferences.ui.SecretDankerModePreferenceCategory>
</PreferenceScreen>
