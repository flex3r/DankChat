<?xml version="1.0" encoding="utf-8"?>

<!-- have different ripple color on light/dark theme so it's well visible on both -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#cca0a0a0">
    <!-- this layer will be replaced programmatically to change color -->
    <item android:drawable="@color/colorThatIsActuallyTransparent" android:id="@+id/ripple_color_layer"/>

    <!-- set mask, otherwise, the color above is used as mask, which might cause the ripple to be invisible if the color is transparent -->
    <item android:id="@android:id/mask"
        android:drawable="@android:color/white" />
</ripple>

