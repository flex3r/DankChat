<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">shortEdges</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="AppTheme.TrueDarkTheme" parent="AppTheme" />

    <style name="AppTheme.TrueDarkOverlay" parent="ThemeOverlay.Material3.DynamicColors.Light" />

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:checkable">false</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
